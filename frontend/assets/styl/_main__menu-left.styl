*
  margin: 0

html,
body
  height: 100%

.menu-left
  min-height: 100%
  margin-bottom: -6.2rem
  &::after
    content: ''
    display: flex

.menu-left::after
  height: 6.2rem

.menu-left
  position: absolute
  z-index: 9999
  height: 100%
  display: inline-flex
  align-items: center
  &__layout
    justify-content: flex-start
    flex-flow: column
  &__link
    width: 1rem
    height: 1rem
    border-radius: 50%
    border: .2rem solid #0e447e
    transition: background-color .3s
    margin-bottom: 2rem
    position: relative
    top: 2.2rem
    &:hover
      background-color: #0e447e