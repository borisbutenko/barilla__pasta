*
  box-sizing: border-box
  font-size: 62.5%
  &::before,
  &::after
    box-sizing: border-box

a
  color: #000
  text-decoration: none

.text
  font-weight: lighter
  &__bold
    font-weight: bolder
  &__circle
    font-family: Circle
  &__intro
    font-family: Intro
  &__lemon
    font-family: Lemon
  &__story
    font-family: ALSStory
  &__graphic
    font-family: GraphicRbc
  &__upper
    text-transform: uppercase
  &__center
    text-align: center
  &__right
    text-align: right
  &__dark-blue
    color: #0e447e

.wrapper
  width: 100%
  background: #d2e0e8 url(../img/main__bcg.jpg) no-repeat top center
  background-size: cover

.layout
  width: 100%
  display: flex
  padding: 0 4rem
  &__center
    justify-content: center

.main
  &__head
    background-image: linear-gradient(13deg, #f1efde 52%, transparent 52.2%)
  &__zigzag
    width: 100%
    height: 4.6rem
    margin-top: -2.6rem
    background: url(../img/main__zigzag.png) no-repeat center
  &__title
    display: inline-flex
    flex-flow: column
    margin-top: 1rem
    & > span
      &:first-child
        font-size: 2.2rem
        letter-spacing: .3rem
      &:nth-of-type(2)
        font-size: 8rem
        letter-spacing: .35rem
      &:last-child
        font-size: 9rem
        letter-spacing: .1rem
        margin-top: -4rem
  &__bow-tie
    margin-top: 1rem
    margin-bottom: 1.5rem
  &__description
    font-size: 1.7rem
    letter-spacing: -.005rem
    line-height: 2.6rem
    max-width: 60rem